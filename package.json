{
  "name": "@blockcore/identity",
  "version": "0.0.3",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "dev": "ts-node-dev --respawn --transpileOnly ./app/app/index.ts",
    "prod": "tsc && node ./lib/app/index.js",
    "start": "node lib/app/index.js",
    "examples": "node lib/test/examples.js",
    "version": "node -p \"require('./package.json').version\"",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/block-core/blockcore-identity.git"
  },
  "bugs": {
    "url": "https://github.com/block-core/blockcore-identity/issues"
  },
  "homepage": "https://github.com/block-core/blockcore-identity#readme",
  "keywords": [
    "blockcore",
    "blockcore-identity",
    "did",
    "decentralized",
    "identity",
    "blockchain"
  ],
  "author": "Blockcore",
  "license": "MIT",
  "dependencies": {
    "@noble/secp256k1": "^1.7.0",
    "@scure/base": "^1.1.1",
    "did-jwt": "^5.6.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "codecov": "^3.1.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.4",
    "ts-node-dev": "^1.1.6"
  }
}
